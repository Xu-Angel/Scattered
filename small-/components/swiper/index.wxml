<view class='swiper'>
  <swiper catch:tap="onSwiperTap" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" duration="{{duration}}" interval='{{interval}}' bind:change="bindchange" circular="{{circular}}" style="height:{{height}}rpx;">
    <block wx:for='{{list}}' wx:key="{{item.id}}">
      <swiper-item>
        <image src="{{item.image}}" data-id='{{item.id}}' class="swiper-item-image" style="height:{{height}}rpx;" mode="widthFix" bind:load="imageLoad" />
      </swiper-item>
    </block>
  </swiper>
</view>
